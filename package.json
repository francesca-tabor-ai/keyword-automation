{
  "name": "keyword-automation",
  "version": "1.0.0",
  "description": "ManyChat-style automation with Claude and MCP",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "init-db": "node src/database/init.js",
    "seed-flows": "node src/database/seed.js",
    "seed-email-templates": "node src/database/seedEmailTemplates.js",
    "validate-env": "node scripts/validate-env.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "mcp:crm": "python3 src/mcp-servers/crm-server.py",
    "mcp:analytics": "python3 src/mcp-servers/analytics-server.py",
    "mcp:hubspot": "python3 src/mcp-servers/hubspot-server.py",
    "example:survey-email": "node src/examples/completeSurveyEmailFlow.js",
    "setup": "npm run validate-env && npm run init-db && npm run seed-flows && npm run seed-email-templates",
    "deploy:check": "npm run validate-env && npm test"
  },
  "keywords": [
    "chatbot",
    "automation",
    "claude",
    "mcp",
    "whatsapp",
    "telegram",
    "hubspot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "bull": "^4.12.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.11",
    "sequelize": "^6.35.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}